# Segurança: bloquear arquivos ocultos (.env, .git, etc)
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

RewriteEngine On

# Se for arquivo/pasta existente, servir direto
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Bloquear pastas sensíveis diretamente pela raiz
RewriteRule ^storage/ - [F,L]
RewriteRule ^certificados/.*\.(p12|pfx|pem)$ - [F,L]

# Front Controller na raiz (ponte para public_html/index.php)
RewriteRule ^ index.php [QSA,L]
